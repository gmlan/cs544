	filter-mapping>
	  -->
	
	
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>presentation.filters.loginFilter</filter-class>
    </filter>
  
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
	<error-page>
	    <error-code>400</error-code>
	    <location>/error</location>
	</error-page>
	<error-page>
	    <error-code>404</error-code>
	    <location>/error</location>
	</error-page>
	<error-page>
	    <error-code>500</error-code>
	    <location>/error</location>
	</error-page>
</web-app>


